<Actions>
    <Action id="sendtext" uiPath="DeviceActions">
        <Name>Send Text</Name>
        <CallbackMethod>sendText</CallbackMethod>
        <ConfigUI>
			<Field id="device" type="menu"
				tooltip="Network connection device">
				<List class="self" filter="self.outgoing|self.incoming" method="DeviceFilter"/>
				<Label>Connection:</Label>
			</Field>
            <Field id="text" type="textfield">
                <Label>Text:</Label>
            </Field>
			<Field id="partial" type="checkbox" defaultValue="no"
				tooltip="Omit the trailing line ending.">
				<Label>Partial:</Label>
			</Field>
        </ConfigUI>
    </Action>

    <Action id="serveractions" uiPath="DeviceActions"><Name> - </Name></Action>

    <Action id="connect" deviceFilter="indigo.device,self.outgoing" uiPath="DeviceActions">
        <Name>Connect</Name>
        <CallbackMethod>connect</CallbackMethod>
    </Action>

    <Action id="disconnect" uiPath="DeviceActions">
        <Name>Disconnect</Name>
        <CallbackMethod>disconnect</CallbackMethod>
        <ConfigUI>
			<Field id="device" type="menu"
				tooltip="Network connection device">
				<List class="self" filter="self.outgoing|self.incoming" method="DeviceFilter"/>
				<Label>Connection:</Label>
			</Field>
        </ConfigUI>
    </Action>

</Actions>
